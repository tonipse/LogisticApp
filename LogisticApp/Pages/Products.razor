@page "/products"
@using LogisticApp.Data
@inject ProductService productService
<h3>Products</h3>

<a href="AddProduct" class="btn btn-primary my-2">+ Product</a>

@if (allProducts == null)
{
    <p>Loading Data...</p>
}
else
{


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>


        <tbody>
            @foreach (Product product in allProducts)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>
                        <button type="button" class="btn-sm btn-secondary" href="EditProduct">Edit</button>
                        <button type="button" class="btn-sm btn-danger" href="DeleteProduct">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    List<Product>? allProducts;
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        allProducts = await productService.GetAllProducts();
    }


}
